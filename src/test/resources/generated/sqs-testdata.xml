<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<connector name="Amazon SQS">
    <global-config>
        <config>
            <attributes>
                <optional caption="Name" group="Basic Settings" javaType="java.lang.String" name="name" type="name"/>
                <optional caption="Region Endpoint" group="Optional Parameters"
                          javaType="org.mule.modules.sqs.RegionEndpoint" name="region" type="enum"/>
                <optional caption="Queue URL" group="Optional Parameters" javaType="java.lang.String" name="queueUrl"
                          type="string"/>
                <optional caption="Access Key" group="Connection" javaType="java.lang.String" name="accessKey"
                          type="string"/>
                <optional caption="Secret Key" group="Connection" javaType="java.lang.String" name="secretKey"
                          type="string"/>
                <optional caption="Queue Name" group="Connection" javaType="java.lang.String" name="queueName"
                          type="string"/>
            </attributes>
        </config>
    </global-config>
    <message-processors>
        <send-message>
            <attributes>
                <optional caption="Message" default="#[payload]" group="General" javaType="java.lang.String"
                          name="message" type="string"/>
            </attributes>
        </send-message>
        <get-url/>
        <delete-message>
            <attributes>
                <optional caption="Receipt Handle" default="#[header:inbound:sqs.message.receipt.handle]"
                          group="General" javaType="java.lang.String" name="receiptHandle" type="string"/>
            </attributes>
        </delete-message>
        <delete-queue/>
        <get-queue-attributes>
            <attributes>
                <required caption="Attribute" group="General" javaType="java.lang.String" name="attribute"
                          type="string"/>
            </attributes>
        </get-queue-attributes>
        <set-queue-attribute>
            <attributes>
                <required caption="Attribute" group="General" javaType="java.lang.String" name="attribute"
                          type="string"/>
                <required caption="Value" group="General" javaType="java.lang.String" name="value" type="string"/>
            </attributes>
        </set-queue-attribute>
        <add-permission>
            <attributes>
                <required caption="Label" group="General" javaType="java.lang.String" name="label" type="string"/>
                <required caption="Account Id" group="General" javaType="java.lang.String" name="accountId"
                          type="string"/>
                <required caption="Action" group="General" javaType="java.lang.String" name="action" type="string"/>
            </attributes>
        </add-permission>
        <remove-permission>
            <attributes>
                <required caption="Label" group="General" javaType="java.lang.String" name="label" type="string"/>
            </attributes>
        </remove-permission>
        <get-approximate-number-of-messages/>
    </message-processors>
    <inbound-endpoint>
        <receive-messages>
            <attributes>
                <optional default="30" name="visibilityTimeout"/>
                <optional default="false" name="preserveMessages"/>
                <optional default="1000" name="pollPeriod"/>
                <optional default="1" name="numberOfMessages"/>
            </attributes>
        </receive-messages>
    </inbound-endpoint>
    <outbound-endpoints/>
</connector>
